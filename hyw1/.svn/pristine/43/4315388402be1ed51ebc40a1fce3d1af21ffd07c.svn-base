<script>
    $('.magic-checkbox2').change(function(){
      var val = $('.magic-checkbox2').attr('checked');
      if(val==undefined){
        $('.jcpgBtn2').attr("disabled",true);
        $('.jcpgBtn2').css({background:'#ccc'});
      }else{
        $('.jcpgBtn2').attr("disabled",false);
        $('.jcpgBtn2').css({background:'#039cf4'});
      }
    })  
    
    $('.jcpgBtn2').click(function(){
      var val = $('.magic-checkbox2').attr('checked');
      if(val==undefined){
        return false;
      }else{
        window.location.href="{:U('Pay/specialPay',array('goods_id'=>$goodsInfo['goods_id']))}";
      }
    })
</script>
